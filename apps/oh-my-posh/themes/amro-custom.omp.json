{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "#45F1C2",
                    "style": "plain",
                    "template": "\udb82\ude0a {{ .UserName }} on",
                    "type": "session"
                },
                {
                    "foreground": "#0CA0D8",
                    "properties": {
                        "folder_separator_icon": "/",
                        "style": "full"
                    },
                    "style": "plain",
                    "template": " \uf07b {{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "#0CA0D8",
                    "style": "plain",
                    "template": "{{ if .Venv }}(<#eddf63>\ue235 {{ .Venv }}</>) {{ end }}",
                    "type": "python"
                },
                {
                    "foreground": "#14A5AE",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "fetch_status": true
                    },
                    "style": "plain",
                    "templates": [
                        "{{ .HEAD }}",
                        "{{ if .Working.Changed }} <#eddf63>\uf111</>{{ end }}",
                        "{{ if .Staging.Changed }} <#63ed6c>\uf44d</>{{ end }}",
                        "{{ if (gt .Working.Untracked 0) }} <#db3f3f>\uf111</>{{ end }}"
                    ],
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#cd5e42",
                    "style": "plain",
                    "template": "\ue3bf ",
                    "type": "root"
                },
                {
                    "foreground": "#45F1C2",
                    "style": "plain",
                    "template": "‚ùØ ",
                    "type": "text",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#CD4277{{ end }}"
                    ]
                }
            ],
            "type": "prompt"
        }
    ],
    "version": 3
}
